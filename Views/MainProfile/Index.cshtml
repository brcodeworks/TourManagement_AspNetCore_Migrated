@model Tour_Management.Models.ProfileViewModel
@{
    ViewData["Title"] = "Main Profile";
}

<style>
    .page-container {
        text-align: center;
        width: 100%;
        font-size: 20px;
        color: white;
        padding-bottom: 0;
        opacity: 1;
    }

    .container-center {
        max-width: 1100px;
        margin: 0 auto;
    }

    ul.navbar-list {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

        ul.navbar-list li {
            float: left;
            border-right: 1px solid #bbb;
        }

            ul.navbar-list li:last-child {
                border-right: none;
            }

            ul.navbar-list li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                ul.navbar-list li a:hover:not(.active) {
                    background-color: #111;
                }

    .active {
        background-color: #04AA6D;
    }

    .tour {
        background-image: url('@Url.Content("~/Pics/homepage.jpg")');
        background-size: cover;
        text-align: center;
        color: white;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.85;
    }

    .label-info {
        color: white;
        background-color: rgba(0,0,0,0.7);
        padding: 20px;
        display: inline-block;
        border-radius: 8px;
    }

    .btn-primary {
        display: inline-block;
        background: #007bff;
        color: white;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 6px;
        font-size: 20px;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .welcome {
        text-align: center;
        margin: 20px 0;
        font-size: 22px;
        color: #222;
    }
</style>

<div class="page-container">
    <div class="container-center">

        <div class="welcome">
            @if (!string.IsNullOrEmpty(Model?.Email))
            {
                <span>Welcome, <strong>@Model.Email</strong></span>
            }
            else
            {
                <span>Welcome</span>
            }
        </div>

        <div class="tour">
            <div>
                <h2 style="margin-bottom:20px;">
                    <a asp-controller="Tour" asp-action="DisplayTours" class="btn-primary">Explore the Tours!</a>
                </h2>

                <p class="label-info">
                    Find the best tour packages without any hassle.<br />
                    Book and pack your luggage.
                </p>
            </div>
        </div>

    </div>
</div>
