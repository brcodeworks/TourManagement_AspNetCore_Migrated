@model Tour_Management.Models.RegisterViewModel
@{
    ViewData["Title"] = "User Registration";
    Layout = null;
}

<link href="https://fonts.googleapis.com/css?family=Rubik:400,700" rel="stylesheet" />
<style>
    
    body {
        background: linear-gradient(180deg,#0b0b0b 0%, #111 100%);
        color: white;
        font-family: 'Rubik', sans-serif;
        margin: 0;
        padding: 20px;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        box-sizing: border-box;
    }

    .page-wrapper {
        display: flex;
        justify-content: center;
        width: 100%;
        padding-top: 24px;
        padding-bottom: 24px;
    }

    .registration-container {
        background-color: rgba(0, 0, 0, 0.85);
        padding: 28px;
        border-radius: 10px;
        width: 100%;
        max-width: 720px;
        box-shadow: 0 6px 30px rgba(0,0,0,0.6);
        box-sizing: border-box;
        max-height: calc(100vh - 80px);
        overflow-y: auto;
    }

        .registration-container::-webkit-scrollbar {
            width: 8px;
        }

        .registration-container::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.08);
            border-radius: 6px;
        }

    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #ffcc66;
        font-size: 28px;
    }

    .form-group {
        margin-bottom: 14px;
        text-align: left;
    }

        .form-group label {
            font-weight: 500;
            display: block;
            margin-bottom: 6px;
        }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 6px;
        border: 1px solid rgba(255,255,255,0.08);
        font-size: 15px;
        background: rgba(255,255,255,0.02);
        color: #fff;
        box-sizing: border-box;
    }

        .form-control::placeholder {
            color: rgba(255,255,255,0.45);
        }

    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        border: none;
    }

    .btn-warning {
        background-color: #cc6600;
        color: black;
    }

        .btn-warning:hover {
            background-color: #b35400;
        }

    .btn-secondary {
        background-color: #555;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #444;
        }

    .text-danger {
        font-size: 13px;
        color: #ff6b6b;
        margin-top: 6px;
    }

    .alert-success {
        background-color: #28a745;
        color: white;
        padding: 10px 16px;
        border-radius: 6px;
        margin-bottom: 16px;
        text-align: center;
    }

    @@media (max-width: 480px) {
        .registration-container

    {
        padding: 18px;
        max-width: 96%;
        max-height: calc(100vh - 48px);
    }

    h1 {
        font-size: 22px;
        margin-bottom: 14px;
    }

    .btn {
        font-size: 14px;
        padding: 10px;
    }

    }
</style>

<div class="page-wrapper">
    <div class="registration-container" role="region" aria-label="User Registration Form">
        <h1>User Registration</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="SignUp" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <select asp-for="Gender" class="form-control" asp-items="@(new SelectList(new[] { "Male", "Female" }))"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dob">Date of Birth</label>
                <input asp-for="Dob" class="form-control" type="date" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Street">Street</label>
                <input asp-for="Street" class="form-control" placeholder="Enter street" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control" placeholder="Enter city" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="State">State</label>
                <input asp-for="State" class="form-control" placeholder="Enter state" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <div style="display:flex; justify-content:center; gap:12px; margin-top:18px;">
                <button type="submit" class="btn btn-warning">Register</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
