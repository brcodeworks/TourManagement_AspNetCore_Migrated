@model List<Tour_Management.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
    ViewBag.ActivePage = "AllBooking";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">All Bookings</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Tour ID</th>
                    <th>Tour Name</th>
                    <th>Place</th>
                    <th>Email</th>
                    <th>First Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.TOUR_ID</td>
                        <td>@b.TOUR_NAME</td>
                        <td>@b.PLACE</td>
                        <td>@b.Email</td>
                        <td>@b.FirstName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
