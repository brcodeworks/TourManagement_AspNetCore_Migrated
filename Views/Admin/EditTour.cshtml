@model Tour_Management.Models.Tour

@{
    ViewBag.Title = "Edit Tour";
    ViewBag.ActivePage = "TourCrud";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Tour</h1>

    <form asp-action="EditTour" method="post" enctype="multipart/form-data" class="bg-dark text-white p-4 rounded shadow">
        <input type="hidden" name="TOUR_ID" value="@Model.TOUR_ID" />

        <div class="mb-3">
            <label class="form-label">Name of Tour</label>
            <input type="text" name="TOUR_NAME" value="@Model.TOUR_NAME" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Place</label>
            <input type="text" name="PLACE" value="@Model.PLACE" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Days</label>
            <input type="number" name="DAYS" value="@Model.DAYS" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Locations</label>
            <input type="text" name="LOCATIONS" value="@Model.LOCATIONS" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" name="PRICE" value="@Model.PRICE" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Tour Info</label>
            <textarea name="TOUR_INFO" maxlength="250" class="form-control" required>@Model.TOUR_INFO</textarea>
        </div>

        <div class="mb-3 text-center">
            <label class="form-label d-block">Current Image</label>
            @if (!string.IsNullOrEmpty(Model.pic))
            {
                <img src="~/Tour_pics/@Model.pic" class="img-thumbnail" style="width:150px; height:150px;" />
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Upload New Image (Optional)</label>
            <input type="file" name="newPic" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">Update Tour</button>
            <a asp-action="TourCrud" class="btn btn-secondary ms-2">Back to Tour List</a>
        </div>
    </form>
</div>
