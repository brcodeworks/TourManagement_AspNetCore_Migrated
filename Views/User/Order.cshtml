@model Tour_Management.Models.Booking

@{
    ViewData["Title"] = "Book Tour";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Confirm Tour Booking</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Message"]
        </div>
    }

    <div class="card mx-auto shadow-lg" style="max-width: 500px; background-color: #000; color: #fff; opacity: 0.9;">
        <div class="card-body">
            <form asp-action="Order" method="post">
                <div class="mb-3">
                    <label class="form-label">Your Name</label>
                    <input asp-for="FirstName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Your City</label>
                    <input asp-for="PLACE" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Tour Name</label>
                    <input asp-for="TOUR_NAME" class="form-control" required />
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-warning text-dark fw-bold px-4">Book</button>
                    <button type="reset" class="btn btn-secondary px-4">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-control {
        border-radius: 6px;
    }

    .btn-warning:hover {
        background-color: #e69500;
    }

    .card {
        border-radius: 10px;
    }
</style>
